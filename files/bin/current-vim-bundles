#!/bin/bash


mkdir -p ~/.vim/bundle
cdold=$(pwd)
cd ~/.vim/bundle


#  ctrlp.vim
git clone git://github.com/kien/ctrlp.vim 


#  supertab
git clone git://github.com/ervandew/supertab 


#  todo.txt-vim
git clone git://github.com/dbeniamine/todo.txt-vim.git 


#  vim-json
git clone git://github.com/elzr/vim-json 


#  Wombat
git clone git://github.com/vim-scripts/Wombat 


#  emmet-vim
git clone git://github.com/mattn/emmet-vim 
cd ~/.vim/bundle/emmet-vim
git submodule update --init --recursive
cd ~/.vim/bundle


#  syntastic
git clone git://github.com/scrooloose/syntastic 


#  vim-colors-solarized
git clone git://github.com/altercation/vim-colors-solarized.git 


#  vim-lawrencium
git clone git://github.com/ludovicchabant/vim-lawrencium 


#  XML-Folding
git clone git://github.com/vim-scripts/XML-Folding 


#  lightline.vim
git clone git://github.com/itchyny/lightline.vim 


#  tabular
git clone ssh://git@github.com/godlygeek/tabular 


#  vim-easy-align
git clone git://github.com/junegunn/vim-easy-align 


#  vim-markdown
git clone ssh://git@github.com/gabrielelana/vim-markdown 


#  matchit
git clone git://github.com/tmhedberg/matchit 


#  tagbar
git clone git://github.com/majutsushi/tagbar 


#  vim-foldsearch
git clone git://github.com/embear/vim-foldsearch 


#  vim-pathogen
git clone git://github.com/tpope/vim-pathogen.git 
mkdir -p ~/.vim/autoload
ln -s ~/.vim/bundle/vim-pathogen/autoload/pathogen.vim ~/.vim/autoload/pathogen.vim


#  nerdtree
git clone git://github.com/scrooloose/nerdtree 


#  tcomment_vim
git clone git://github.com/tomtom/tcomment_vim 


#  vim-fugitive
git clone git://github.com/tpope/vim-fugitive 


#  vim-surround
git clone git://github.com/tpope/vim-surround 


#  promptline.vim
git clone git://github.com/edkolev/promptline.vim 


#  tmuxline.vim
git clone git://github.com/edkolev/tmuxline.vim 


#  vim-jsbeautify
git clone git://github.com/maksimr/vim-jsbeautify 
cd ~/.vim/bundle/vim-jsbeautify
git submodule update --init --recursive
cd ~/.vim/bundle


#  vim-xml
git clone git://github.com/matthewbednarski/vim-xml 
cd $cdold
